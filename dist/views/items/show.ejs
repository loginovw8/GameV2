<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>

    <form action="/items/update" method="post">
        <div class="form-item">
            <div class="item">
                <div class="section">
                    <h2 class="section__title">
                        <%= item.title %>
                    </h2>
                    <img class="section__image" src="/img/<%= item.image %>">
                </div>
            
                <input type="hidden" value="<%= item.id %>" placeholder="<%= item.id %>" id="id" name="id">
            
                <div>
                    <h3>Список Жанров</h3>
                    <select>
                        <option value="1">Открытый мир</option>
                        <option value="2">Шутеры</option>
                        <option value="3">Гонки</option>
                        <option value="4">Хоррор</option>
                        <option value="5">Выживание</option>
                    </select>
                </div><br>
        
                <% if (auth){ %>
                    <div class="form-group">
                        <label class="form-group__label" for="title">title</label>
                        <input value="<%= item.title %>" class="form-group__input" type="text" id="title" name="title"
                            placeholder="title">
                    </div>
                
                    <div class="form-group">
                        <label class="form-group__label" for="image">image</label>
                        <input value="<%= item.image %>" class="form-group__input" type="text" id="image" name="image"
                            placeholder="image">
                    </div>
                
                    <div class="form-group">
                        <label class="form-group__label" for="cat_id">Жанр</label>
                        <input class="form-group__input" type="text" id="cat_id" name="cat_id" placeholder="Введите Номер Жанра">
                    </div>
                
                    <input class="form-button" type="submit" value="Update">
                </div>
                <div class="description">
                    <h2>Системные требования</h2>

                    
                    <h2>Описание</h2>
                    <h3><%= item.description %></h3>
                </div>
                    <%}else{%>
                        <div class="form-group">
                            <h3>Название</h3>
                            <label class="form-group__label" for="title"><%= item.title %></label>
                        </div>

                        <div class="form-group">
                            <h3>Фото</h3>
                            <label class="form-group__label" for="image"><%= item.image %></label>
                        </div>

                        <div class="form-group">
                            <h3>Номер Жанра</h3>
                            <label class="form-group__label" for="cat_id"><%= item.cat_id %></label>
                        </div>
                    </div>
            
            <div class="description">
                <h2>Системные требования</h2>
                <h2>Описание</h2>
                <h3><%= item.description %></h3>
            </div>
        </div>
        

        <div class="comment">
            <div class="userName">
                Somebody
            </div>
            <div class="comments">
                Something
            </div>
            <div class="date">
                21:30
            </div>

        </div>

    </form>
<%}%>



<%- include('../particles/footer.ejs') %>
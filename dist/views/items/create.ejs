<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>
<div class="content">
  <form class="create__form" action="/items/store" method="post">

    <div class="create__text">
      <h2>Создание</h2>

      <br>
      <div class="form-group">
        <label class="form-group__label" for="title">Название</label>
        <input class="form-group__input" type="text" id="title" name="title" placeholder="Введите Название" required>
      </div>

      <div class="form-group">
        <label class="form-group__label" for="image">Фото</label>
        <input name="image" type="file" placeholder="файл" required>
      </div>

      <div class="box">
        <label class="form-group__label" for="cat_id">Жанр</label>
          <% for (let i = 0; i < categories.length; i++){%>
            <div class="categoryOfCreate" value="<%= categories[i].title %>"><input type="checkbox" class="checkbox categoryOfCreate"  name="check"><label><%= categories[i].title %></label></div>
          <% } %>

      </div>

      <div class="form-group">
        <label class="form-group__label" for="description">Описание</label>
        <input class="form-group__input" type="text" id="description" name="description" placeholder="Об игре" required>
      </div>

      <input class="form-button" type="submit" value="Create">
    </div>

  </form>
</div>

<%- include('../particles/footer.ejs') %>